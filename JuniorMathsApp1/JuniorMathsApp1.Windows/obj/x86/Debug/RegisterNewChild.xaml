<Page
    x:Class="JuniorMathsApp1.RegisterNewChild"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JuniorMathsApp1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid >
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/JuniorMathsApp-Background1.jpg"/>
        </Grid.Background>
        <ScrollViewer HorizontalAlignment="Center" Height="768" VerticalAlignment="Top" Width="1366">
            <Grid VerticalAlignment="Top" Height="768" Width="625">
                <TextBlock HorizontalAlignment="Left" Margin="103,231,0,0" TextWrapping="Wrap" Text="Enter Surname:" VerticalAlignment="Top" FontSize="20" Height="26" Width="149" Foreground="#FF29F10A"/>
                <TextBlock HorizontalAlignment="Left" Margin="103,327,0,0" TextWrapping="Wrap" Text="Enter age:" VerticalAlignment="Top" FontSize="20" Height="27" Width="112" Foreground="#FF24F110"/>
                <TextBlock HorizontalAlignment="Left" Margin="103,415,0,0" TextWrapping="Wrap" Text="Select grade:" VerticalAlignment="Top" FontSize="20" Height="27" Width="149" Foreground="#FF1EEC14"/>
                <Button x:ConnectionId='1' x:Name="btnSaveInformation" Content="Save Information" HorizontalAlignment="Left" Margin="100,513,0,0" VerticalAlignment="Top" Width="194"                                  Height="44" Background="#FF0C0000" BorderBrush="#FF2FE212"/>
                <TextBox x:Name="txtChildName" HorizontalAlignment="Left" Margin="103,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="419" Height="35" />
                <TextBox x:Name="txtChildSurname" HorizontalAlignment="Left" Margin="103,257,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="419" Height="33"/>
                <TextBox x:Name="txtChildAge" HorizontalAlignment="Left" Margin="103,354,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="419" Height="33"/>
                <TextBlock HorizontalAlignment="Left" Margin="160,27,0,0" TextWrapping="Wrap" Text="Register new child" VerticalAlignment="Top" FontSize="36" Foreground="#FF0FDBF0"/>
                <ComboBox x:Name="cbSelectGrade" HorizontalAlignment="Left" Margin="103,442,0,0" VerticalAlignment="Top" Width="191"/>
                <TextBlock HorizontalAlignment="Left" Margin="103,137,0,0" TextWrapping="Wrap" Text="Enter Name:" VerticalAlignment="Top" FontSize="20" Foreground="#FF23F10E"/>
                <Button x:ConnectionId='2' Content="Back" HorizontalAlignment="Left" Margin="331,513,0,0" VerticalAlignment="Top" Width="194" Height="44"                      BorderBrush="#FFE41717" Background="#FF0E0000"/>
                <TextBlock x:Name="lblGetParentIdNum" HorizontalAlignment="Left" Margin="408,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Foreground="#FF12F1DD" Width="28"/>
            </Grid>
        </ScrollViewer>

    </Grid>
</Page>

