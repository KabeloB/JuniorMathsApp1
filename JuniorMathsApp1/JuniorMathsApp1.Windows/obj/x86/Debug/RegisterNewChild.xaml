<Page
    x:Class="JuniorMathsApp1.RegisterNewChild"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JuniorMathsApp1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/JuniorMathsApp-Background1.jpg"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Margin="23,253,0,0" TextWrapping="Wrap" Text="Enter Surname:" VerticalAlignment="Top" FontSize="20" Height="26" Width="149" Foreground="#FF29F10A"/>
        <TextBlock HorizontalAlignment="Left" Margin="23,349,0,0" TextWrapping="Wrap" Text="Enter age:" VerticalAlignment="Top" FontSize="20" Height="27" Width="112" Foreground="#FF24F110"/>
        <TextBlock HorizontalAlignment="Left" Margin="23,437,0,0" TextWrapping="Wrap" Text="Select grade:" VerticalAlignment="Top" FontSize="20" Height="27" Width="149" Foreground="#FF1EEC14"/>
        <Button x:ConnectionId='1' x:Name="btnSaveInformation" Content="Save Information" HorizontalAlignment="Left" Margin="20,535,0,0" VerticalAlignment="Top" Width="194"                                  Height="44" Background="#FF0C0000" BorderBrush="#FF2FE212"/>
        <TextBox x:Name="txtChildName" HorizontalAlignment="Left" Margin="23,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="419" Height="35" />
        <TextBox x:Name="txtChildSurname" HorizontalAlignment="Left" Margin="23,279,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="419" Height="33"/>
        <TextBox x:Name="txtChildAge" HorizontalAlignment="Left" Margin="23,376,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="419" Height="33"/>
        <TextBlock HorizontalAlignment="Left" Margin="80,49,0,0" TextWrapping="Wrap" Text="Register new child" VerticalAlignment="Top" FontSize="36" Foreground="#FF0FDBF0"/>
        <TextBlock HorizontalAlignment="Left" Margin="107,101,0,0" TextWrapping="Wrap" Text="Logged-in Parent Id:" VerticalAlignment="Top" Height="38" Width="216" FontSize="24" Foreground="#FF38F30F"/>
        <ComboBox x:Name="cbSelectGrade" HorizontalAlignment="Left" Margin="23,464,0,0" VerticalAlignment="Top" Width="191"/>
        <TextBlock HorizontalAlignment="Left" Margin="23,159,0,0" TextWrapping="Wrap" Text="Enter Name:" VerticalAlignment="Top" FontSize="20" Foreground="#FF23F10E"/>
        <Button x:ConnectionId='2' Content="Back" HorizontalAlignment="Left" Margin="251,535,0,0" VerticalAlignment="Top" Width="194" Height="44"                      BorderBrush="#FFE41717" Background="#FF0E0000"/>
        <TextBlock x:Name="lblGetParentIdNum" HorizontalAlignment="Left" Margin="328,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Foreground="#FF12F1DD" Width="28"/>

    </Grid>
</Page>

