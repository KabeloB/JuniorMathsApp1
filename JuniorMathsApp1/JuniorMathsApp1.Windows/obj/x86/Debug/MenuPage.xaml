        <Button x:ConnectionId='6' x:Name="btnAboutApp" Content="About App" HorizontalAlignment="Left" Margin="50,499,0,0" VerticalAlignment="Top" Width="396"                          />
        <TextBlock HorizontalAlignment="Left" Margin="50,160,0,0" TextWrapping="Wrap" Text="Display Parent Id:" VerticalAlignment="Top" FontSize="22"/>
        <TextBlock x:Name="lblParentIdenNum" HorizontalAlignment="Left" Margin="234,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22" Height="26" Width="51"/>
