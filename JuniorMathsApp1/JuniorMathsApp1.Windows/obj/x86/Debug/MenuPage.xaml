<Page
    x:Class="JuniorMathsApp1.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JuniorMathsApp1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/JuniorMathsApp-Background1.jpg"/>
        </Grid.Background>
        <Button x:ConnectionId='1' x:Name="btnStartTest" Content="Start New Test" HorizontalAlignment="Left" Margin="50,203,0,0" VerticalAlignment="Top" Width="393"                            Height="54" FontSize="20" Background="#FF010D11"/>
        <Button x:ConnectionId='2' x:Name="btnViewTestResults" Content="View More Options" HorizontalAlignment="Left" Margin="50,275,0,0" VerticalAlignment="Top" Width="393"                                  Height="54" RenderTransformOrigin="0.481,1.395" FontSize="20" Background="#FF01080F"/>
        <Button x:ConnectionId='3' x:Name="btnEditChildDetails" Content="Edit Parent Account Details" HorizontalAlignment="Left" Margin="50,425,0,0" VerticalAlignment="Top" Width="393"                                   Height="54" FontSize="20" Background="#FF0E0101"/>
        <Button x:ConnectionId='4' x:Name="btnLogout" Content="Logout" HorizontalAlignment="Left" Margin="50,497,0,0" VerticalAlignment="Top" Width="393"                         Height="54" FontSize="20" Background="#FF0A0101"/>
        <TextBlock HorizontalAlignment="Left" Margin="99,112,0,0" TextWrapping="Wrap" Text="Menu Functions" VerticalAlignment="Top" FontSize="36" FontStyle="Italic" FontWeight="Bold" Foreground="#FF23CFE0"/>
        <Button x:ConnectionId='5' x:Name="btnRegisterNewChild" Content="Register New Child" HorizontalAlignment="Left" Margin="50,350,0,0" VerticalAlignment="Top" Width="393"                                   Height="54" FontSize="20" Background="#FF0A0101"/>
        <TextBlock HorizontalAlignment="Left" Margin="92,160,0,0" TextWrapping="Wrap" Text="Logged-In Parent User Id:" VerticalAlignment="Top" FontSize="22" Foreground="#FF08D2E6"/>
        <TextBlock x:Name="lblParentIdenNum" HorizontalAlignment="Left" Margin="345,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22" Height="26" Width="35" Foreground="#FF47DC26"/>
    </Grid>
</Page>

