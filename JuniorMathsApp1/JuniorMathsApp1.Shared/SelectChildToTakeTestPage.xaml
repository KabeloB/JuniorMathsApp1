<Page
    x:Class="JuniorMathsApp1.SelectChildToTakeTestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JuniorMathsApp1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock HorizontalAlignment="Left" Margin="95,53,0,0" TextWrapping="Wrap" Text="Please select child to take test" VerticalAlignment="Top" FontSize="24"/>
        <ListView x:Name="lsvChooseChild" HorizontalAlignment="Left" Height="528" Margin="39,110,0,0" VerticalAlignment="Top" Width="407" ItemClick="lsvChooseChild_ItemClick" SelectionChanged="MySelectionChanged"/>
        <Button x:Name="btnSelect" Content="Select" HorizontalAlignment="Left" Margin="58,660,0,0" VerticalAlignment="Top" Width="143" Click="btnSelect_Click"/>
        <Button x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Margin="271,660,0,0" VerticalAlignment="Top" Width="143" Click="btnBack_Click"/>

    </Grid>
</Page>
