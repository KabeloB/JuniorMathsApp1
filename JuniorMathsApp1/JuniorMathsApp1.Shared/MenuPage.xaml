<Page
    x:Class="JuniorMathsApp1.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JuniorMathsApp1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Hub Header="Hub">
            <HubSection Header="Welcome to main menu" Width="704">
                <DataTemplate>
                    <Grid Height="560" Margin="0,0,-324,0">
                        <Button x:Name="btnStartTest" Content="Start new test" HorizontalAlignment="Left" Margin="77,62,0,0" VerticalAlignment="Top" Width="399" Click="btnStartTest_Click"/>
                        <Button x:Name="btnViewTestResults" Content="View test results" HorizontalAlignment="Left" Margin="77,126,0,0" VerticalAlignment="Top" Width="399"/>
                        <Button x:Name="btnEditChildDetails" Content="Edit Child Details" HorizontalAlignment="Left" Margin="77,190,0,0" VerticalAlignment="Top" Width="399" Click="btnEditChildDetails_Click"/>
                        <Button x:Name="btnRemoveChild_" Content="Remove child from account" HorizontalAlignment="Left" Margin="80,250,0,0" VerticalAlignment="Top" Width="396"/>
                        <Button x:Name="btnLogout" Content="Logout" HorizontalAlignment="Left" Margin="77,327,0,0" VerticalAlignment="Top" Width="399" Click="btnLogout_Click"/>
                    </Grid>
                </DataTemplate>
            </HubSection>
            <HubSection Header="Add new child details" Width="582">
                <DataTemplate>
                    <Grid Height="566" Margin="10,0,-264,0">
                        <TextBlock x:Name="LblEnterChildName" HorizontalAlignment="Left" Margin="98,10,0,0" TextWrapping="Wrap" Text="Eneter name:" VerticalAlignment="Top" FontSize="20"/>
                        <TextBlock HorizontalAlignment="Left" Margin="98,99,0,0" TextWrapping="Wrap" Text="Enter Surname:" VerticalAlignment="Top" FontSize="20"/>
                        <TextBlock HorizontalAlignment="Left" Margin="98,184,0,0" TextWrapping="Wrap" Text="Enter age:" VerticalAlignment="Top" FontSize="20"/>
                        <TextBlock HorizontalAlignment="Left" Margin="96,279,0,0" TextWrapping="Wrap" Text="Select grade:" VerticalAlignment="Top" FontSize="20"/>
                        <RadioButton x:Name="rdGradeOne" Content="1st Grade" HorizontalAlignment="Left" Margin="95,320,0,0" VerticalAlignment="Top" FontSize="18" Checked="rdGradeOne_Checked"/>
                        <RadioButton x:Name="rdGradeTwo" Content="2nd Grade" HorizontalAlignment="Left" Margin="95,351,0,0" VerticalAlignment="Top" FontSize="18" Checked="rdGradeTwo_Checked"/>
                        <Button x:Name="btnSaveInformation" Content="Save Information" HorizontalAlignment="Left" Margin="95,456,0,0" VerticalAlignment="Top" Width="340" Click="btnSaveInformation_Click"/>
                        <TextBox x:Name="txtChildName" HorizontalAlignment="Left" Margin="96,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="336"/>
                        <TextBox x:Name="txtChildSurname" HorizontalAlignment="Left" Margin="98,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="334"/>
                        <TextBox x:Name="txtChildAge" HorizontalAlignment="Left" Margin="98,213,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="334"/>
                    </Grid>
                </DataTemplate>
            </HubSection>
            <HubSection Header="Application details" Width="345">
                <DataTemplate>
                    <Grid Height="569" Margin="0,0,-84,0">
                        <TextBlock HorizontalAlignment="Left" Margin="10,31,0,0" TextWrapping="Wrap" Text="This application will assist parents to keep track of their childrens  progress regarding thier mathematical skills by allowing them to take a series of math questions and calculating their test results to see how well they did." VerticalAlignment="Top" Height="197" Width="273" FontSize="20"/>
                    </Grid>
                </DataTemplate>
            </HubSection>
        </Hub>

    </Grid>
</Page>
