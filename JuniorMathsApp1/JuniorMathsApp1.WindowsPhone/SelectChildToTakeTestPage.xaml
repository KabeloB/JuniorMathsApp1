<Page
    x:Class="JuniorMathsApp1.SelectChildToTakeTestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JuniorMathsApp1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/JuniorMathsApp-Background1.jpg"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Margin="22,25,0,0" TextWrapping="Wrap" Text="Please select child to take test" VerticalAlignment="Top" FontSize="20" Foreground="#FF1EE0D7"/>
        <ListView x:Name="lsvChooseChild" HorizontalAlignment="Left" Height="376" Margin="21,54,0,0" VerticalAlignment="Top" Width="356" ItemClick="lsvChooseChild_ItemClick" SelectionChanged="MySelectionChanged" Foreground="#FF18EABA"/>
        <Button x:Name="btnSelect" Content="Select" HorizontalAlignment="Left" Margin="22,455,0,0" VerticalAlignment="Top" Width="158" Click="btnSelect_Click" Background="#FF010F01" BorderBrush="#FF17D828" FontSize="16"/>
        <Button x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Margin="219,455,0,0" VerticalAlignment="Top" Width="158" Click="btnBack_Click" Background="#FF0E0101" BorderBrush="#FFE43F1A" FontSize="16"/>

    </Grid>
</Page>
