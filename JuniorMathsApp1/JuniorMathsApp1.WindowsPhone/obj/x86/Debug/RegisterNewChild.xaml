<Page
    x:Class="JuniorMathsApp1.RegisterNewChild"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JuniorMathsApp1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="0,-26.667,0,-0.333">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF464342" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ScrollViewer HorizontalAlignment="Center" Height="505" VerticalAlignment="Top" Width="400">
            <Grid VerticalAlignment="Top" Height="638" Width="397">
                <TextBlock HorizontalAlignment="Left" Margin="10,187,0,0" TextWrapping="Wrap" Text="Enter Surname:" VerticalAlignment="Top" FontSize="16" Height="26" Width="363" Foreground="#FF0CD9EE" FontWeight="Bold"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,273,0,0" TextWrapping="Wrap" Text="Enter age:" VerticalAlignment="Top" FontSize="16" Height="27" Width="363" Foreground="#FF0CD9EE" FontWeight="Bold"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,361,0,0" TextWrapping="Wrap" Text="Select grade:" VerticalAlignment="Top" FontSize="16" Height="27" Width="184" Foreground="#FF0CD9EE" FontWeight="Bold"/>
                <Button x:ConnectionId='1' x:Name="btnSaveInformation" Content="Save Information" HorizontalAlignment="Left" Margin="10,447,0,0" VerticalAlignment="Top" Width="178"                                  Height="44" Background="#FF0C0000" BorderBrush="White" FontSize="14"/>
                <TextBox x:Name="txtChildName" HorizontalAlignment="Left" Margin="10,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="363" Height="35" FontSize="16" />
                <TextBox x:Name="txtChildSurname" HorizontalAlignment="Left" Margin="10,213,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="363" Height="33" FontSize="16"/>
                <TextBox x:Name="txtChildAge" InputScope="Number" HorizontalAlignment="Left" Margin="10,300,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="363" Height="33" FontSize="16"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,29,0,0" TextWrapping="Wrap" Text="Register new child" VerticalAlignment="Top" FontSize="36" Foreground="#FF0CD9EE" Height="42" Width="377"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,95,0,0" TextWrapping="Wrap" Text="Enter Name:" VerticalAlignment="Top" FontSize="16" Foreground="#FF0CD9EE" Width="363" FontWeight="Bold"/>
                <Button x:ConnectionId='2' Content="Back" HorizontalAlignment="Left" Margin="196,447,0,0" VerticalAlignment="Top" Width="177" Height="44"                      BorderBrush="White" Background="#FF0E0000" FontSize="14"/>
                <TextBlock x:Name="lblGetParentIdNum" HorizontalAlignment="Left" Margin="317,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Foreground="#FF12F1DD" Width="28"/>
                <ComboBox x:Name="cbSelectGrade" HorizontalAlignment="Left" Margin="10,383,0,0" VerticalAlignment="Top" Width="178" FontSize="16" Foreground="White"/>
            </Grid>
        </ScrollViewer>

    </Grid>
</Page>

