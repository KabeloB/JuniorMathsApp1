<Page
    x:Class="JuniorMathsApp1.RegistrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JuniorMathsApp1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="0,-26.667,0,-0.333">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/JuniorMathsApp-Background1.jpg" Opacity="0.7"/>
        </Grid.Background>
        <ScrollViewer HorizontalAlignment="Center" Height="540" VerticalAlignment="Top" Width="400">
            <Grid VerticalAlignment="Top" Height="638" Width="398">
                <TextBlock HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" Text="Registration New Account" VerticalAlignment="Top" FontSize="30" Foreground="#FF21D1E2" Width="379"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,107,0,0" TextWrapping="Wrap" Text="Enter Name:" VerticalAlignment="Top" FontSize="16" Foreground="#FF0CD9EE" Width="162"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,162,0,0" TextWrapping="Wrap" Text="Enter Surname:" VerticalAlignment="Top" FontSize="16" Foreground="#FF0CD9EE" Width="162"/>
                <TextBox x:Name="txtEnterName" HorizontalAlignment="Left" Margin="198,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" FontSize="16"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,221,0,0" TextWrapping="Wrap" Text="Enter Email Address:" VerticalAlignment="Top" FontSize="16" Foreground="#FF0CD9EE" Width="171"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,280,0,0" TextWrapping="Wrap" Text="Enter Phone Number:" VerticalAlignment="Top" FontSize="16" Foreground="#FF0CD9EE" Width="171"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,338,0,0" TextWrapping="Wrap" Text="Enter Password:" VerticalAlignment="Top" FontSize="16" Foreground="#FF0CD9EE" Width="171"/>
                <TextBox x:Name="txtEnterSurname" HorizontalAlignment="Left" Margin="198,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" Height="32" FontSize="16"/>
                <TextBox x:Name="txtEnterEmail" HorizontalAlignment="Left" Margin="197.281,202.473,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Width="192.912" Height="34.98" FontSize="16">
                    <TextBox.RenderTransform>
                        <CompositeTransform SkewX="-0.117" TranslateX="0.025" Rotation="0.192" TranslateY="0.013"/>
                    </TextBox.RenderTransform>
                </TextBox>
                <TextBox x:Name="txtEnterPhoneNo" InputScope="Number" HorizontalAlignment="Left" Margin="198,260,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" FontSize="16" />
                <Button x:ConnectionId='1' x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="10,392,0,0" VerticalAlignment="Top" Width="171"                         Background="#FF0F0101" BorderBrush="#FF1D62DA" Height="39"/>
                <TextBox x:Name="txtEnterPassword" HorizontalAlignment="Left" Margin="198,323,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" Height="34" FontSize="16"/>
                <Button x:ConnectionId='2' x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Margin="218,392,0,0" VerticalAlignment="Top" Width="171"                       BorderBrush="#FFF12F10" Background="#FF0F0101"/>
                <Button x:ConnectionId='3' Content="Clear All" HorizontalAlignment="Left" Margin="10,453,0,0" VerticalAlignment="Top" Width="171" Background="#FF0A0101" BorderBrush="#FFC0EC2A"                     />
            </Grid>
        </ScrollViewer>

    </Grid>
</Page>

