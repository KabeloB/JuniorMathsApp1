        <TextBox x:Name="txtEnterNewPhoneNo" HorizontalAlignment="Left" Margin="176,298,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" FontSize="16" Height="33"/>
        <TextBox x:Name="txtEnterNewPassword" HorizontalAlignment="Left" Margin="176,357,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" FontSize="16" Height="34"/>
        <Button x:ConnectionId='1' x:Name="btnUpdate" Content="Update" HorizontalAlignment="Left" Margin="23,427,0,0" VerticalAlignment="Top" Width="171" FontSize="16" BorderBrush="#FF1BD14C" Background="#FF0C0101"                     />
        <Button x:ConnectionId='2' x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Margin="206,427,0,0" VerticalAlignment="Top" Width="171" FontSize="16" Background="#FF110101" BorderBrush="#FFEE1313"                      />

