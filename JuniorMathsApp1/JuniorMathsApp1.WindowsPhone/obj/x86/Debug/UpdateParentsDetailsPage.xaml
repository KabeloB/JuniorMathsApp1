<Page
    x:Class="JuniorMathsApp1.UpdateParentsDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JuniorMathsApp1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/JuniorMathsApp-Background1.jpg"/>
        </Grid.Background>
        <ScrollViewer HorizontalAlignment="Left" Height="475" VerticalAlignment="Top" Width="400">
            <Grid VerticalAlignment="Top" Height="878" Width="398">
                <TextBlock HorizontalAlignment="Left" Margin="2,4,0,0" TextWrapping="Wrap" Text="Update Parent Details" VerticalAlignment="Top" FontSize="36" Foreground="#FF11E8D4" Height="43" Width="356"/>
                <TextBlock HorizontalAlignment="Left" Margin="4,62,0,0" TextWrapping="Wrap" Text="Parent ID:" VerticalAlignment="Top" FontSize="16" Foreground="#FF0DF12C"/>
                <TextBlock x:Name="lblParentID" HorizontalAlignment="Left" Margin="157,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Width="34" Foreground="#FF14EAD6"/>
                <TextBlock HorizontalAlignment="Left" Margin="4,119,0,0" TextWrapping="Wrap" Text="Enter New Name:" VerticalAlignment="Top" FontSize="16" Foreground="#FF11F330"/>
                <TextBlock HorizontalAlignment="Left" Margin="2,180,0,0" TextWrapping="Wrap" Text="Enter New Surname:" VerticalAlignment="Top" FontSize="16" Foreground="#FF13F031"/>
                <TextBlock HorizontalAlignment="Left" Margin="4,246,0,0" TextWrapping="Wrap" Text="Enter New Email:" VerticalAlignment="Top" FontSize="16" Foreground="#FF0FF02D"/>
                <TextBlock HorizontalAlignment="Left" Margin="4,307,0,0" TextWrapping="Wrap" Text="Enter New Phone no:" VerticalAlignment="Top" FontSize="16" Foreground="#FF10F02E"/>
                <TextBlock HorizontalAlignment="Left" Margin="4,366,0,0" TextWrapping="Wrap" Text="Enter New Password:" VerticalAlignment="Top" FontSize="16" Foreground="#FF11F02F"/>
                <TextBox x:Name="txtEnterNewName" HorizontalAlignment="Left" Margin="157,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" FontSize="16" Height="33"/>
                <TextBox x:Name="txtEnterNewSurname" HorizontalAlignment="Left" Margin="157,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" FontSize="16" Height="25"/>
                <TextBox x:Name="txtEnterNewEmail" HorizontalAlignment="Left" Margin="157,231,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" FontSize="16" Height="20"/>
                <TextBox x:Name="txtEnterNewPhoneNo" HorizontalAlignment="Left" Margin="157,292,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" FontSize="16" Height="33"/>
                <TextBox x:Name="txtEnterNewPassword" HorizontalAlignment="Left" Margin="157,351,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" FontSize="16" Height="34"/>
                <Button x:ConnectionId='1' x:Name="btnUpdate" Content="Update" HorizontalAlignment="Left" Margin="4,421,0,0" VerticalAlignment="Top" Width="171" FontSize="16" BorderBrush="#FF1BD14C" Background="#FF0C0101"                     />
                <Button x:ConnectionId='2' x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Margin="187,421,0,0" VerticalAlignment="Top" Width="171" FontSize="16" Background="#FF110101" BorderBrush="#FFEE1313"                      />
            </Grid>
        </ScrollViewer>

    </Grid>
</Page>

